<h1>List of Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= check_box_tag "task_ids[]", task.id, task.completed, class: 'task-checkbox', onchange: 'this.form.submit()' %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, method: :delete, style: 'margin-left: 10px;' %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
